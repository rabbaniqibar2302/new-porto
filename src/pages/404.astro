---
interface Props {
  error: unknown;
}

const { error } = Astro.props;

// import tailwind
import "../styles/global.css";

import gambar from "../assets/under.jpg";
---

<div class="hero bg-base-200 min-h-screen" >
  <img src={gambar.src} class="size-full object-cover opacity-10">
  <div class="hero-content text-center">
    <div class="max-w-md">
      <h1 class="text-8xl font-bold">{error instanceof Error ? error.message : "Under Reconstructions!"}</h1>
      <p class="py-6 text-2xl">
       hasqibar design is on going!
      </p>

    </div>
  </div>
</div>